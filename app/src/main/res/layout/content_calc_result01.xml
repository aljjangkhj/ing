<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/color_ff4081">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_main_menu">
            <ImageView
                android:layout_width="112px"
                android:layout_height="112px"
                android:layout_marginRight="56px"
                android:layout_marginLeft="56px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_action_back" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="가계부"
            android:textSize="18dp"
            android:textColor="@color/color_ffffff"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/memopark"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160px">

                <TextView
                    android:layout_width="600px"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="날짜"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:id="@+id/fonts1"
                    android:layout_marginLeft="120px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="데이트 비용"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:id="@+id/fonts2" />

        </LinearLayout>

        <View
            android:layout_width="1200px"
            android:layout_height="8px"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            android:background="#000000"/>

        <FrameLayout
            android:layout_width="1200px"
            android:layout_height="1420px"
            android:layout_gravity="center">

            <ListView
                android:id="@+id/content_calc_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#000000"
                android:dividerHeight="8px"/>


        </FrameLayout>

        <www.khj08.com.dateplan.ui.CircleImageView
            android:layout_width="320px"
            android:layout_height="320px"
            android:layout_gravity="bottom|end|left"
            android:layout_marginLeft="180px"
            android:src="@drawable/frog"/>
    </LinearLayout>
</LinearLayout>