<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notepad02"
    app:menu="@menu/save">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="132px"
        android:layout_marginTop="40px"
        android:layout_marginRight="160px"
        android:layout_marginBottom="40px"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="#333333"
                android:layout_gravity="bottom"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="#333333"
                android:layout_gravity="top"/>

            <View
                android:layout_width="8px"
                android:layout_height="match_parent"
                android:background="#333333"
                android:layout_gravity="right"/>

            <View
                android:layout_width="8px"
                android:layout_height="match_parent"
                android:background="#333333"
                android:layout_gravity="left"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="600px"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:id="@+id/date_picker_btn">

                        <TextView
                            android:fontFamily="@font/bmjua_ttf"
                            android:id="@+id/date_picker_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:hint="0001년 01월 01일"
                            android:textColor="#000000"
                            android:textSize="13dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="8px"
                        android:layout_height="120px"
                        android:background="#333333"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- 날씨 설정 1차 적용 안함 날씨 : ** 로할지 버튼으로 할지 설정-->

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8px"
                        android:background="#333333"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:id="@+id/time_Hello_btn">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/starttimeimage"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <TextView
                                android:fontFamily="@font/bmjua_ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="만난 시간"
                                android:textColor="#000000"
                                android:textSize="13dp"/>

                            <TextView
                                android:fontFamily="@font/bmjua_ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="0시0분"
                                android:id="@+id/hello_time_text"
                                android:gravity="right"/>

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="8px"
                        android:layout_height="match_parent"
                        android:background="#333333"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/time_Bye_btn">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/timeresetimage"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <TextView
                                android:fontFamily="@font/bmjua_ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="헤어진 시간"
                                android:textColor="#000000"
                                android:textSize="13dp"/>

                            <TextView
                                android:fontFamily="@font/bmjua_ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="12px"
                                android:hint="0시0분"
                                android:id="@+id/bye_time_text"
                                android:gravity="right"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8px"
                        android:background="#333333"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20px">

                        <TextView
                            android:fontFamily="@font/bmjua_ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="길동의 지출"
                            android:textColor="#000"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/first_name_datepicker"/>

                    </LinearLayout>

                    <View
                        android:layout_width="8px"
                        android:layout_height="match_parent"
                        android:background="#333333"/>

                    <LinearLayout
                        android:layout_width="500px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <EditText
                            android:fontFamily="@font/bmjua_ttf"
                            android:layout_width="400px"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:inputType="numberSigned"
                            android:maxLength="9"
                            android:gravity="right"
                            android:id="@+id/man_money"/>

                        <TextView
                            android:fontFamily="@font/bmjua_ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:textColor="#000000"
                            android:layout_marginLeft="12px"/>

                    </LinearLayout>

                    <View
                        android:layout_width="8px"
                        android:layout_height="match_parent"
                        android:background="#333333"
                        android:layout_marginLeft="8px"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:fontFamily="@font/bmjua_ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="합계"
                            android:layout_gravity="center"
                            android:textColor="#000000"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8px"
                        android:background="#333333"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20px">

                        <TextView
                            android:fontFamily="@font/bmjua_ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="둘리의 지출"
                            android:textColor="#000"
                            android:id="@+id/second_name_datepicker"/>

                    </LinearLayout>

                    <View
                        android:layout_width="8px"
                        android:layout_height="match_parent"
                        android:background="#333333"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="500px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <EditText
                                android:fontFamily="@font/bmjua_ttf"
                                android:layout_width="400px"
                                android:layout_height="wrap_content"
                                android:background="#ffffff"
                                android:gravity="right"
                                android:inputType="numberSigned"
                                android:maxLength="9"
                                android:id="@+id/woman_money"/>

                            <TextView
                                android:fontFamily="@font/bmjua_ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="원"
                                android:textColor="#000000"
                                android:layout_marginLeft="12px"/>

                        </LinearLayout>

                        <View
                            android:layout_width="8px"
                            android:layout_height="116px"
                            android:background="#333333"
                            android:layout_marginLeft="8px"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center">

                            <TextView
                                android:fontFamily="@font/bmjua_ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:id="@+id/add_money"/>

                            <TextView
                                android:fontFamily="@font/bmjua_ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="원"
                                android:textColor="#000000"
                                android:layout_marginLeft="12px"
                                android:layout_marginRight="40px"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8px"
                        android:background="#333333"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="800px"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="12px">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:layout_width="300px"
                            android:layout_height="300px"
                            android:layout_gravity="center"
                            android:background="@drawable/plancamera_web"
                            android:id="@+id/dateplan_imagebtn"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="40px"
                            android:id="@+id/dateplan_imageView"/>

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8px"
                        android:background="#333333"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:layout_marginTop="40px"
                    android:orientation="vertical">

                    <EditText
                        android:fontFamily="@font/bmjua_ttf"
                        android:id="@+id/edit_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:background="@android:drawable/edit_text"
                        android:hint="일기 제목을 입력하세요."/>

                    <EditText
                        android:fontFamily="@font/bmjua_ttf"
                        android:id="@+id/edit_text_content"
                        android:layout_width="match_parent"
                        android:layout_height="480px"
                        android:gravity="top"
                        android:background="@android:drawable/edit_text"
                        android:hint="일기 내용을 입력하세요." />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>