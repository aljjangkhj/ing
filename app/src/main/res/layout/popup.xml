<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1200px"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_popup_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120px"
            android:layout_marginBottom="120px"
            android:layout_marginLeft="96px"
            android:layout_marginRight="96px"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="20px"
            android:text="내용" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_popup_1btn"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/btn_popup_1btn_ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_popup_1btn_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="확인" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_popup_2btn"
            android:layout_width="match_parent"
            android:layout_height="188px"
            android:weightSum="2"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/btn_popup_2btn_cancel"
                android:contentDescription="취소"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_popup_2btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="취소" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btn_popup_2btn_ok"
                android:contentDescription="확인"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_popup_2btn_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="확인" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>